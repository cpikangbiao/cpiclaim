<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity CaseRecovery.
    -->
    <changeSet id="20180827064441-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="subcase_id"
                                 baseTableName="case_recovery"
                                 constraintName="fk_case_recovery_subcase_id"
                                 referencedColumnNames="id"
                                 referencedTableName="vessel_sub_case"/>

        <addForeignKeyConstraint baseColumnNames="recovery_type_id"
                                 baseTableName="case_recovery"
                                 constraintName="fk_case_recovery_recovery_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="recovery_type"/>

        <addForeignKeyConstraint baseColumnNames="creditor_id"
                                 baseTableName="case_recovery"
                                 constraintName="fk_case_recovery_creditor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="creditor"/>

    </changeSet>
</databaseChangeLog>
