            </column>

            <column name="currency" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="currency_rate" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="fee_cost_date" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="fee_cost" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="fee_cost_dollar" type="decimal(10,2)">
