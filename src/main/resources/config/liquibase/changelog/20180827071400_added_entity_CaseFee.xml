            </column>

            <column name="deduct_currency" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="deduct_currency_rate" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="deduct_amount" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="amount_dollar" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="fee_create_user" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="fee_create_date" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="remark" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="is_signed" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="sign_user" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="sign_date" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="process_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="fee_type_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="subcase_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="creditor_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
