<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity CasePayment.
    -->
    <changeSet id="20180827061806-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="payment_type_id"
                                 baseTableName="case_payment"
                                 constraintName="fk_case_payment_payment_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_type"/>

        <addForeignKeyConstraint baseColumnNames="subcase_id"
                                 baseTableName="case_payment"
                                 constraintName="fk_case_payment_subcase_id"
                                 referencedColumnNames="id"
                                 referencedTableName="vessel_sub_case"/>

        <addForeignKeyConstraint baseColumnNames="creditor_id"
                                 baseTableName="case_payment"
                                 constraintName="fk_case_payment_creditor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="creditor"/>

    </changeSet>
</databaseChangeLog>
